package exemple_lr_D3_L1_L2
public
   with Base_Types ;

subprogram sub
end sub;


subprogram implementation sub.good

annex behavior_specification {**

states
 uniqueState : initial final state ;
  
**};

end sub.good;

subprogram implementation sub.error1 
annex behavior_specification {**

